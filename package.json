{
  "name": "arabeasy-extension",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "description": "This extension adds full diacritics (tashkeel) to Arabic text using an LLM API.",
  "keywords": [
    "arabic"
  ],
  "author": "Rachel Shu",
  "license": "ISC",
  "main": "manifest.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wearsshoes/arabic-diacritization-chrome.git"
  },
  "bugs": {
    "url": "https://github.com/wearsshoes/arabic-diacritization-chrome/issues"
  },
  "homepage": "https://github.com/wearsshoes/arabic-diacritization-chrome#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.2",
    "bottleneck": "^2.19.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xxhash-wasm": "^1.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.266",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
