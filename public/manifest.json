{
  "manifest_version": 3,
  "name": "ArabEasy",
  "version": "0.1",
  "description": "Allows users to add pronunciation diacritics (tashkeel) to Arabic text or convert Arabic text to Arabizi.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://api.anthropic.com; object-src 'self'"

  },
  "action": {
    "default_popup": "public/popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}